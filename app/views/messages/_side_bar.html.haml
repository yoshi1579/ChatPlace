.row.chat-side__user
    .col-sm-10.col-md-10.chat-side__header
        
        .chat-side__user-content
            %h3.chat-side__user-name
                = current_user.name
    .col-sm-2.col-md-2.chat-side__header
        .chat-side__user--new-group
            = link_to new_group_path do 
                %i.fa.fa-pencil-square-o
            = link_to edit_user_path(current_user) do 
                = fa_icon 'cog', class: 'icon'
.chat-side__groups
    - current_user.groups.each do |group|
        .chat-side__groups-list
            .chat-side__groups-name
                = link_to group_messages_path(group) do 
                    = group.name
            .chat-side__groups-message
                = group.show_last_message
        